<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <size android:height="3dp"/>
            <solid android:color="@color/video_transparent_bg"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="3dp"/>
                <size android:height="3dp"/>
                <solid android:color="@color/seek_bar_progress_second"/>
            </shape>
        </scale>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="3dp"/>
                <size android:height="3dp"/>
                <gradient android:startColor="@color/video_line_progress_start"
                android:centerColor="@color/video_line_progress_center"
                android:endColor="@color/video_line_progress_end"/>
            </shape>
        </scale>
    </item>
</layer-list>
