<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_video_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_margin_normal"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="vertical">

    <com.jplus.jvideoview.view.VideoLoadingView
        android:id="@+id/vlv_video_loading"
        android:layout_width="@dimen/video_play_width_height"
        android:layout_height="@dimen/video_play_width_height" />

    <TextView
        android:id="@+id/tv_video_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/video_text_color" />

</LinearLayout>