<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_video_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/controller_height"
    android:background="@drawable/bg_top_controller_trans"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/imb_video_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/view_margin_small"
        android:background="@color/video_transparent_bg"
        android:visibility="gone"
        android:src="@mipmap/ic_video_back" />

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/view_margin_big"
        android:layout_marginEnd="@dimen/view_margin_big"
        android:layout_toEndOf="@id/imb_video_back"
        android:textColor="@color/video_text_color"
        android:textSize="@dimen/video_title_size_tv" />

</RelativeLayout>