<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_video_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_margin_normal"
    android:visibility="gone"
    android:gravity="center">

        <TextView
            android:id="@+id/tv_video_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin_normal"
            android:textColor="@color/video_text_color"
            android:textSize="@dimen/text_size_video_normal" />

        <TextView
            android:id="@+id/tv_video_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin_normal"
            android:layout_toEndOf="@id/tv_video_hint"
            android:text="@string/video_refresh"
            android:textColor="@color/video_text_color"
            android:textSize="@dimen/text_size_video_normal" />
    </RelativeLayout>