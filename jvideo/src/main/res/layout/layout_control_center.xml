<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ly_video_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

        <LinearLayout
                android:id="@+id/ly_video_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

            <com.jplus.jvideoview.view.VideoPlayView
                    android:id="@+id/vpv_video_center_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ly_video_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

            <com.jplus.jvideoview.view.VideoLoadingView
                    android:id="@+id/vlv_video_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/tv_video_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网速或者提示"
                    android:textColor="@color/video_text_color" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ly_video_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_video_hint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_margin_normal"
                    android:textColor="@color/video_text_color"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/tv_video_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_margin_normal"
                    android:layout_toRightOf="@id/tv_video_hint1"
                    android:text="请点击重试~"
                    android:textColor="@color/video_text_color"
                    android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>