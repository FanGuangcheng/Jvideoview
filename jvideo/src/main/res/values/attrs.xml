<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JvView">
        <attr name="play_btn_color" format="reference|color" />
        <attr name="progress_drawer" format="reference"/>
        <attr name="thumb_color" format="reference|color"/>
        <attr name="lines_drawer" format="reference"/>
        <attr name="loading_color" format="reference|color"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="textSize" format="float"/>
        <attr name="startText" format="string"/>
        <attr name="ingText" format="string"/>
        <attr name="successText" format="string"/>
        <attr name="failedText" format="string"/>
        <attr name="cancelText" format="string"/>
        <attr name="pauseText" format="string"/>
        <attr name="num_progress_mode">
            <enum name="both_sides" value="0"/>
            <enum name="left_sides" value="1"/>
            <enum name="right_sides" value="2"/>
            <enum name="no_sides" value="3"/>
        </attr>
        <attr name="isNoProgress" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="VideoPlayView">
        <attr name="circle_color" format="reference|color" />
        <attr name="play_color" format="reference|color" />
        <attr name="stroke_width" format="float"/>
    </declare-styleable>

    <declare-styleable name="VideoLoadingView">
        <attr name="lines_color" format="color" />
        <attr name="rate" format="float" />
    </declare-styleable>
</resources>