<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/radius_video_progress" />
            <size android:height="@dimen/radius_video_progress"/>
            <solid android:color="@color/video_bar_bg_gray_light"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/radius_video_progress" />
                <size android:height="@dimen/radius_video_progress"/>
                <solid android:color="@color/video_play_transparent"/>
            </shape>
        </scale>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/radius_video_progress"/>
                <size android:height="@dimen/radius_video_progress"/>
                <solid android:color="@color/video_play_color" />
            </shape>
        </scale>
    </item>
</layer-list>
