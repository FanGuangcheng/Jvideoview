<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/radius_video_progress" />
            <size android:height="@dimen/radius_video_progress"/>
            <solid android:color="@color/video_transparent_bg"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/radius_video_progress"/>
                <size android:height="@dimen/radius_video_progress"/>
                <solid android:color="@color/seek_bar_progress_second"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/radius_video_progress"/>
                <size android:height="@dimen/radius_video_progress"/>
                <gradient android:centerColor="@color/seek_bar_progress"/>
            </shape>
        </clip>
    </item>
</layer-list>
